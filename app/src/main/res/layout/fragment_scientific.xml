<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ScientificFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/scientificRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/border">


        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:id="@+id/scientificLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scientificResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="Result:" />

            <TextView
                android:id="@+id/scientificValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputSecond"
            android:layout_below="@id/scientificLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/valueOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_weight="1"
                android:background="@color/colorBlue"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logButtonLinear"
            android:layout_below="@id/inputSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Log" />

            <Button
                android:id="@+id/lnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ln" />

        </LinearLayout>


</RelativeLayout>

</RelativeLayout>

